{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["ES2020", "DOM"],
        "moduleResolution": "Node",
        "rootDir": "src",
        "outDir": "dist",

        "jsx": "react-jsx",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true,

        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src", "**/*.d.ts"],
    "exclude": ["dist", "node_modules"]
}
